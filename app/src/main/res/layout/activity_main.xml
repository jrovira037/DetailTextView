<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.jroviraa.detailtextview.DetailTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:icon="@drawable/ic_local_phone_black_24dp"
        app:text="+41 475-08-22"
        app:title="Phone" />

    <com.jroviraa.detailtextview.DetailTextView
        android:id="@+id/clickable_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:icon="@drawable/ic_local_phone_black_24dp"
        app:text="+41 475-08-22"
        app:title="Click to copy phone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#777" />

    <com.jroviraa.detailtextview.DetailTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:icon="@drawable/ic_launcher_background"
        app:title="Do nothing" />

    <com.jroviraa.detailtextview.DetailTextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:icon="@drawable/ic_delete_black_24dp"
        app:title="Delete" />

</LinearLayout>